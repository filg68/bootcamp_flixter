<!DOCTYPE html>
<html>
  <head>
    <title>eTeach</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>

  <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse navbar-flex-container">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <%= link_to 'eTeach', root_path, class: 'navbar-brand' %>

      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
        </li>
        <div class='user-access-links'>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
          <% end %>
          <% if not user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
        </div>
        <% end %>
      </ul>
    </nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>

     <div id="footer">
       <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
           <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'Team', team_path %>
            <br />
            <%= link_to 'Careers', career_path %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            filgdev@gmail.com
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
              <%= link_to "https://github.com/filg68" do %>
                <span class="fa fa-github-square fa-2x"></span>
              <% end %>
              <%= link_to "https://www.reddit.com/r/rails/" do %>
                <span class="fa fa-reddit-square fa-2x"></span>
              <% end %>
              <%= link_to "https://www.linkedin.com/in/fil-gambatesa-946ab71/" do %>
                <span class="fa fa-linkedin-square fa-2x"></span>
              <% end %>
              <%= link_to "https://medium.com/@runfilrun" do %>
                <span class="fa fa-medium fa-2x"></span>
              <% end %>
         </div>
        </div>
       </div>
     </div>



    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
