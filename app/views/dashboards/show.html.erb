<br />

<div class="booyah-box col-10 offset-1">
    <h1>What I'm Learning</h1>
      <% current_user.enrolled_courses.each do |course| %>
        <h3 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h3>
        <br />
        <%= image_tag course.image.url, class: 'img-fluid' %>
        <br />
        <div class="row">
          <div class="col-12 col-sm-8">
            <%= course.description %>
          </div>
          <div class="col-12 col-sm-4">
            <%= link_to "More Info...", course_path(course), class: 'btn btn-primary float-right' %>
          </div>
        </div>
        <br />
        <br />
      <% end %>
      
      <hr >
      <br class="clr" />
      
      <h1>What I'm Teaching</h1>
      <% current_user.courses.each do |course| %>
        <h3 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h3>
        <br />
        <%= image_tag course.image.url, class: 'img-fluid' %>
        <br />
        <div class="row">
          <div class="col-12 col-sm-8">
            <%= course.description %>
          </div>
          <div class="col-12 col-sm-4">
            <%= link_to "More Info...", course_path(course), class: 'btn btn-primary float-right' %>
            <%= link_to 'Administer', instructor_course_path(course), class: 'float-right btn btn-danger btn-primary' %>
          </div>
        </div>
        <br class="clr" />
        <br />
      <% end %>
</div>